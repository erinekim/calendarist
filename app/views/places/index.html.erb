<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    <li data-target="#carousel-example-generic" data-slide-to="3"></li>
    <li data-target="#carousel-example-generic" data-slide-to="4"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'aireancientbaths.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Aire Ancient Baths
      <div id="small-caption">
        image courtesy anticolonial.com
      </div>
      </div>
    </div>
   
   <div class="item">
      <%= image_tag 'citygrit.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        City Grit
      <div id="small-caption">
        image courtesy South x Northeast
      </div>
      </div>
    </div>

    <div class="item">
      <%= image_tag 'shuffleboard.png', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Royal Palms Shuffle Board Club
      <div id="small-caption">
       image courtesy of RealtyCollective
      </div>
 	 </div>
    </div>

    <div class="item">
      <%= image_tag 'watertable.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        The Water Table
      <div id="small-caption">
       image courtesy of NY Daily News
      </div>
 	 </div>
    </div>

      <div class="item">
      <%= image_tag 'thenshefell.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Then She Fell 
      <div id="small-caption">
       image courtesy of Theme Park University
      </div>
 	 </div>
    </div>

  </div>
  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<% @places.each do |place| %>
  <div class="big-box col-xs-10 col-xs-offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1><br />
    <i><%= place.address %></i><br /><br />
    <i><b><%= place.perfect_for %></i></b><br />
    <p><%= place.description %></p><br />
  </div>

<% end %>

<div class="pagination col-xs-12">
<%= will_paginate @places, :page_links => true %>
</div>